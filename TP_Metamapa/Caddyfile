metamapa.app {
    # 1. Si piden /graphql, mandalo al Agregador (puerto interno 8080)
    reverse_proxy /graphql moduloagregador:8080

    # 2. Todo lo dem√°s, mandalo al Frontend (puerto interno 8088)
    reverse_proxy frontend:8088
}

auth.metamapa.app {
    reverse_proxy keycloak:8080
}

www.metamapa.app {
    redir https://metamapa.app{uri}
}

# --- Observabilidad ---

grafana.metamapa.app {
    reverse_proxy grafana:3000
}

prometheus.metamapa.app {
    reverse_proxy prometheus:9090
}

zipkin.metamapa.app {
    reverse_proxy zipkin:9411
}
